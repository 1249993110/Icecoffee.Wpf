                    xmlns:localWind="clr-namespace:IceCoffee.Wpf.CustomControlLibrary.Windows">
    <Style x:Key="FramelessWindowStyle" TargetType="{x:Type localWind:FramelessWindow}">
        <Setter Property="ResizeMode" Value="CanMinimize"/>
        <Setter Property="WindowStyle" Value="None"/>
    </Style>
</ResourceDictionary>